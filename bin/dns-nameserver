#!/usr/bin/perl
# PODNAME: dns-nameserver
 
use strict;
use warnings;

use Getopt::Long                 qw( GetOptions );
use App::LCAC::API::DNS          qw();
use App::LCAC::API::DBI          qw();

my %opt = (
    host        => '',
    port        => '',
    categorizer => '',
    netdb       => '',
);

GetOptions(
    \%opt,
    'host=s',
    'port=s',
    'categorizer=s',
    'netdb=s',
)
    or die "usage: $0 --host=H --port=P --categorizer=D --netdb=D\n";

my %db;

for my $name (qw( Categorizer NetDB )) {
    my $lc_name = lc $name;

    if ( defined( $opt{$lc_name} ) ) {
       $db{$lc_name} = App::LCAC::API::DBI->$lc_name( $opt{$lc_name} );
    }
}

App::LCAC::API::DNS->new(
    host => $opt{host},
    port => $opt{port},
    db   => \%db,
)->run;

#!/usr/bin/perl
 
use strict;
use warnings;
use Text::CSV::LCAC::Categorizer ();
use App::LCAC::API::DNS          ();

die "usage: $0 file host port\n" unless @ARGV >= 1 && @ARGV <= 3;

my ( $file, $host, $port ) = @ARGV;

my $db = Text::CSV::LCAC::Categorizer->new($file)
    or die "cannot open db $file\n";

App::LCAC::API::DNS->new( db => $db, host => $host, port => $port )->run;
